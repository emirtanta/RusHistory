@model RusTarihi.Models.Members

@{
    ViewBag.Title = $"{Model.Name} {Model.Surname}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center">@ViewBag.Title</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)

                        @* kullanıcı adı bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName,"Kullanıcı Adı", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* ad bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name,"Ad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* soyad bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Surname,"Soyad", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* RolID dropdown *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.RolID, "Rol Seçin", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("RolID", null,"Seçiniz", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RolID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* buton bölümü *@
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Güncelle" class="btn btn-warning" />
                                @Html.ActionLink("İptal", "MemberList", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </section>
    </div>
</div>