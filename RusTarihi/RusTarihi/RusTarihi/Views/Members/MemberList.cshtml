@model IEnumerable<RusTarihi.Models.Members>

@{
    ViewBag.Title = "Üye Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_pens"></i>Kullanıcı Adı</th>
                        <th><i class="icon_pens"></i>Ad</th>
                        <th><i class="icon_tag"></i> Soyad</th>
                        <th><i class="icon_tag"></i> Rolü</th>
                        <th><i class="icon_tools"></i> </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rols.Name)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-success" href="/Members/MemberEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Members/MemberDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
