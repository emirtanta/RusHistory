@model IEnumerable<RusTarihi.Models.Categories>

@{
    ViewBag.Title = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Categories/CategoryCreate"> Kategori Ekle</a>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_building"></i> Kategori Adı</th>
                        <th><i class="icon_calendar"></i> Başlangıç Tarihi</th>
                        <th><i class="icon_calendar"></i> Bitiş Tarihi</th>
                        <th><i class="icon_tools"></i> </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td>
                                @item.Start.Value.Year
                            </td>
                            <td>
                                @item.Finish.Value.Year
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="/Categories/CategoryCreate"><i class="icon_plus_alt2"></i></a>
                                    <a class="btn btn-success" href="/Categories/CategoryEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Categories/CategoryDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
