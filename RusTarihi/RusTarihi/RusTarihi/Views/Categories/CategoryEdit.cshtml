@model RusTarihi.Models.Others.CategoryVM

@{
    ViewBag.Title = $"{Model.CategoryName}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center"><b>@ViewBag.Title</b></h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    @* kategori adı bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Kategori adı" })
                            @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @* başlangıç tarihi bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <input type="date" class="form-control" name="StartDate" value="@Model.StartDate" />
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
                            </div>

                            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* bitiş tarihi bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.FinishDate, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <input type="date" class="form-control" name="FinishDate" value="@Model.StartDate" />
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.FinishDate, new { htmlAttributes = new { @class = "form-control" }, @type = "date" })
                            </div>
                            @Html.ValidationMessageFor(model => model.FinishDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* tarih aralığı bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Frequency, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Frequency, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "gg/mm/yyyy - gg/mm/yyyy şeklinde yazın" })
                            @Html.ValidationMessageFor(model => model.Frequency, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* buton bölümü *@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-danger">
                            <input type="submit" value="Güncelle" class="btn btn-warning" />
                            @Html.ActionLink("İptal", "CategoryList", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>
    </div>
</div>

