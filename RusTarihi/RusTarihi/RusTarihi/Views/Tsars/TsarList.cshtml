@model IEnumerable<RusTarihi.Models.Tsars>

@{
    ViewBag.Title = "Çar Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Tsars/TsarCreate"> Çar Ekle</a>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_profile"></i> Tam Adı</th>
                        <th><i class="icon_profile"></i> Çar Adı</th>
                        <th><i class="icon_calendar"></i> Doğum Tarihi</th>
                        <th><i class="icon_pin_alt"></i> Hanedan</th>
                        <th><i class="icon_mobile"></i> Kategori</th>
                        <th><i class="icon_cart"></i> </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FullName</td>
                            <td>@item.FullName</td>
                            <td>@item.BirthDate</td>
                            <td>@item.Dynasty</td>
                            <td>@item.Categories.CategoryName</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="/Tsars/TsarCreate"><i class="icon_plus_alt2"></i></a>
                                    <a class="btn btn-success" href="/Tsars/TsarEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Tsars/TsarDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </section>
    </div>
</div>












