@model IEnumerable<RusTarihi.Models.Descriptions>

@{
    ViewBag.Title = "Açıklama Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Descriptions/DescriptionCreate"> Açıklama Ekle</a>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_pens"></i> Açıklama Başlığı</th>
                        <th><i class="icon_tag"></i> Kategori Adı</th>
                        <th><i class="icon_tag"></i> Çar Adı</th>
                        <th><i class="icon_tools"></i> </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.Raw(item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categories.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tsars.FullName)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="/Descriptions/DescriptionCreate"><i class="icon_plus_alt2"></i></a>
                                    <a class="btn btn-success" href="/Descriptions/DescriptionEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Descriptions/DescriptionDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
