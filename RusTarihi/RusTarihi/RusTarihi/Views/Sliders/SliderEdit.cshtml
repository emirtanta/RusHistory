@model RusTarihi.Models.Others.SliderVM

@{
    ViewBag.Title = $"{Model.Title}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">

                @using (Html.BeginForm("SliderEdit", "Sliders", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4 class="text-center"><b style="color:red">@ViewBag.Title</b></h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.ID)


                        @* Eski  Resim Düzenle Bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.SliderSitePath, "Eski Slider Resmi: ", new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                <img src="@Model.SliderSitePath" width="100" height="100" />
                                @Html.ValidationMessageFor(model => model.SliderSitePath, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* Yeni  Resim Düzenle Bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.SliderSitePath, "Resim Yükleyin", new { @class = "control-label col-md-2" })
                            <div class="col-md-3">
                                <input type="file" name="SliderSitePath" class="form-control1" accept=".jpg,.jpeg,.png" width="100" height="100" />
                            </div>
                        </div>

                        @* title bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } ,@placeholder="Slider Başlığı Yazın"})
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* summary bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Summary, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Summary, new { htmlAttributes = new { @class = "form-control" },@placeholder="Slider Özeti Yazın" })
                                @Html.ValidationMessageFor(model => model.Summary, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* detail bölümü *@
                        <div class="form-group">
                            @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label col-lg-2" })
                            <div class="col-md-10">
                                @Html.TextAreaFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" } ,@placeholder="Slider Detayı Yazın"})
                                @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        @* buton bölümü *@
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10 text-danger">
                                <input type="submit" value="Güncelle" class="btn btn-warning" />
                                @Html.ActionLink("İptal", "SliderList", null, new { @class = "btn btn-danger" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>
