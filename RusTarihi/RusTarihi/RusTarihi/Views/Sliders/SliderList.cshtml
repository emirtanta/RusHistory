@model IEnumerable<RusTarihi.Models.Sliders>

@{
    ViewBag.Title = "Slider Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Sliders/SliderCreate"> Slider Ekle</a>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_pens"></i> Slider Resmi</th>
                        <th><i class="icon_tag"></i> Başlık</th>
                        <th><i class="icon_tools"></i> </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.SliderSitePath" width="50" height="50" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="/Sliders/SliderCreate"><i class="icon_plus_alt2"></i></a>
                                    <a class="btn btn-success" href="/Sliders/SliderEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Sliders/SliderDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
