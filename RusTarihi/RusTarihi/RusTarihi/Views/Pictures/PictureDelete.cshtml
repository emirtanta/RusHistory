@model RusTarihi.Models.Pictures

@{
    ViewBag.Title = "Resim Silme Formu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center"><b>@ViewBag.Title</b></h1>

<div class="row text-center">
    <p>
        <b><img src="@Model.PictureSitePath" width="50" height="50" /></b>  resmi istediğine emin misin?
    </p>
</div>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color text-center">
            <input type="submit" value="Sil" class="btn btn-warning" /> |
            @Html.ActionLink("İptal", "PictureList",null,new { @class="btn btn-danger"})
        </div>
    }
</div>
