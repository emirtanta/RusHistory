
@* Paged list kütüphanesi eklenmesi *@
@using PagedList
@using PagedList.Mvc
@using RusTarihi.Helper; @* seo tanımlaması için *@
@model IPagedList<RusTarihi.Models.Tsars>

@{
    ViewBag.Title = "Tsar";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<section id="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <article>
                        <div class="post-image">
                            <div class="post-heading">
                                @* Seo ile çar yazılarına link verdik *@
                                @*<h3><a href="/çarlar/@SeoHelper.ToSeoUrl(item.TsarName).ToLower()-@item.ID">@item.TsarName</a></h3>*@

                                <h3><a href="/Home/TsarDetay/@item.ID">@item.TsarName</a></h3>
                            </div>
                            <img src="" alt="" />
                        </div>
                        <p>
                            Qui ut ceteros comprehensam. Cu eos sale sanctus eligendi, id ius elitr saperet, ocurreret pertinacia pri an. No mei nibh consectetuer, semper laoreet perfecto ad qui, est rebum nulla argumentum ei. Fierent adipisci iracundia est ei, usu timeam persius
                            ea. Usu ea justo malis, pri quando everti electram ei, ex homero omittam salutatus sed.
                            @* İçerik kısmından 10 karakterlik kısmı aldık *@
                            @Html.Raw(item.FullName)
                        </p>
                        <div class="bottom-article">
                            <ul class="meta-post">
                                <li><i class="icon-calendar"></i><a href="#"> Mar 23, 2013</a></li>
                                <li><i class="icon-user"></i><a href="#"> Admin</a></li>
                                <li><i class="icon-folder-open"></i><a href="#"> Blog</a></li>
                                <li><i class="icon-comments"></i><a href="#">4 Comments</a></li>
                            </ul>
                            <a href="/Home/TsarDetay/@item.ID" class="pull-right">Devamı <i class="icon-angle-right"></i></a>
                        </div>
                    </article>
                }





                @* pagination başlangıç *@
                    <div id="pagination">
                        @Html.PagedListPager(Model, Sayfa => Url.Action("Tsar", new { Sayfa }), PagedListRenderOptions.Classic)
                    </div>
                @* pagination bitiş *@
            </div>
            <div class="col-lg-4">
                <aside class="right-sidebar">

                    @* arama bölümü başlangıç *@
                    <div class="widget">
                        <form class="form-search">
                            <input class="form-control" type="text" placeholder="Search..">
                        </form>
                    </div>
                    @* arama bölümü bitiş *@

                    @* Kategoriler Tagı *@
                    <div class="widget">
                        <h5 class="widgetheading">Kategoriler</h5>
                        <ul class="cat">
                            @* Kategori Partial Bölgesi Tanımlandı *@
                            @{
                                Html.RenderAction("TsarCategoryPartial", "Home");
                            }
                        </ul>
                    </div>

                    @* Latest post Tagı *@
                    <div class="widget">
                        <h5 class="widgetheading">Son Yüklenenler</h5>
                        <ul class="recent">
                            @{
                                Html.RenderAction("TsarKayitPartial", "Home");
                            }
                        </ul>
                    </div>

                    @* Popüler Tagı *@
                    @*<div class="widget">
                        <h5 class="widgetheading">Popular tags</h5>
                        <ul class="tags">
                            <li><a href="#">Web design</a></li>
                            <li><a href="#">Trends</a></li>
                            <li><a href="#">Technology</a></li>
                            <li><a href="#">Internet</a></li>
                            <li><a href="#">Tutorial</a></li>
                            <li><a href="#">Development</a></li>
                        </ul>
                    </div>*@

                </aside>
            </div>
        </div>
    </div>
</section>

