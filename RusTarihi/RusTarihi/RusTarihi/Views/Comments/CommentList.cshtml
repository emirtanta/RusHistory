@model IEnumerable<RusTarihi.Models.Comments>

@{
    ViewBag.Title = "Yorum Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<a class="btn btn-primary" href="/Comments/CommentCreate"> Yorum Ekle</a>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h1 class="text-center"><b style="color:red">@ViewBag.Title</b></h1>
            </header>

            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th><i class="icon_map"></i> Yorum Adı</th>
                        <th><i class="icon_mail"></i> Email</th>
                        <th><i class="icon_tag"></i> Onay</th>
                        <th><i class="icon_tag"></i> Yorum Kategori</th>
                        <th><i class="icon_tag"></i> Yorum Yapan</th>
                        <th><i class="icon_tools"></i> </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsConfirm)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Categories.CategoryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Members.UserName)
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn btn-primary" href="/Comments/CommentCreate"><i class="icon_plus_alt2"></i></a>
                                    <a class="btn btn-success" href="/Comments/CommentEdit/@item.ID"><i class="icon_check_alt2"></i></a>
                                    <a class="btn btn-danger" href="/Comments/RolDelete/@item.ID"><i class="icon_close_alt2"></i></a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </section>
    </div>
</div>
