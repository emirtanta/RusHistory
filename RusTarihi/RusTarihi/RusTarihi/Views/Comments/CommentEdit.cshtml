@model RusTarihi.Models.Others.CommentVM

@{
    //ViewBag.Title = $"{Model.FullName}";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4 class="text-center"><b>@ViewBag.Title</b></h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ID)

                    @* fullname bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Ad soyad" })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Email bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" }, @type = "email", @placeholder = "email adresi" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    @* Eklenme tarihi *@
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.AddedDate, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <input type="datetime" class="form-control" name="AddedDate" value="@Model.AddedDate" />
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.AddedDate, new { htmlAttributes = new { @class = "form-control" }, @type = "datetime" })
                            </div>

                            @Html.ValidationMessageFor(model => model.AddedDate, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                    @* düzenleme tarihi bölümü *@
                    @*<div class="form-group">
                        @Html.LabelFor(model => model.ModifiedDate, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-12">
                            <div class="col-lg-6">
                                <input type="datetime" class="form-control" name="ModifiedDate" value="@Model.ModifiedDate" />
                            </div>
                            <div class="col-lg-4">
                                @Html.EditorFor(model => model.ModifiedDate, new { htmlAttributes = new { @class = "form-control" }, @type = "datetime" })
                            </div>

                            @Html.ValidationMessageFor(model => model.ModifiedDate, "", new { @class = "text-danger" })
                        </div>
                    </div>*@

                    @* onay bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsConfirm, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            <div class="checkbox">
                                @Html.EditorFor(model => model.IsConfirm)
                                @Html.ValidationMessageFor(model => model.IsConfirm, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    @* CategoryID dropdown *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryID, "Kategori Seçin", htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("CategoryID", null, "Seçiniz", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* MemberID dropdown *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.MemberID, "Üye Seçin", htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            @Html.DropDownList("MemberID", null, "Seçiniz", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* TsarID dropdown *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.TsarID, "Çar Seçin", htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            @Html.DropDownList("TsarID", null, "Seçiniz", htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TsarID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* Detail bölümü *@
                    <div class="form-group">
                        @Html.LabelFor(model => model.Detail, htmlAttributes: new { @class = "control-label col-lg-2" })
                        <div class="col-lg-10">
                            @Html.TextAreaFor(model => model.Detail, new { htmlAttributes = new { @class = "form-control" }, @placeholder = "Yorum detayı" })
                            @Html.ValidationMessageFor(model => model.Detail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    @* buton bölümü *@
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 text-center">
                            <input type="submit" value="Güncelle" class="btn btn-warning" />
                            @Html.ActionLink("İptal", "CommentList", null, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
                }
            </div>
        </section>
    </div>
</div>
